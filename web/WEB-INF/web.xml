<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <servlet>
        <servlet-name>OneServlet</servlet-name>
        <servlet-class>com.jason.controller.OneServet</servlet-class>
        <!--        <load-on-startup>1</load-on-startup>-->
    </servlet>
    <servlet>
        <servlet-name>TwoServlet</servlet-name>
        <servlet-class>com.jason.controller.TwoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAddTeacherServlet</servlet-name>
        <servlet-class>com.jason.controller.UserAddTeacherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAddStudentServlet</servlet-name>
        <servlet-class>com.jason.controller.UserAddStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserFindTeacherServlet</servlet-name>
        <servlet-class>com.jason.controller.UserFindTeacherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserFindStudentServlet</servlet-name>
        <servlet-class>com.jason.controller.UserFindStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDeleteStudentServlet</servlet-name>
        <servlet-class>com.jason.controller.UserDeleteStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDeleteTeacherServlet</servlet-name>
        <servlet-class>com.jason.controller.UserDeleteTeacherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.jason.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.jason.controller.AddProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindProductServlet</servlet-name>
        <servlet-class>com.jason.controller.FindProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OneServlet</servlet-name>
        <url-pattern>/one</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TwoServlet</servlet-name>
        <url-pattern>/two</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAddTeacherServlet</servlet-name>
        <url-pattern>/user/addTeacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAddStudentServlet</servlet-name>
        <url-pattern>/user/addStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserFindTeacherServlet</servlet-name>
        <url-pattern>/user/findTeacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserFindStudentServlet</servlet-name>
        <url-pattern>/user/findStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDeleteStudentServlet</servlet-name>
        <url-pattern>/user/deleteStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDeleteTeacherServlet</servlet-name>
        <url-pattern>/user/deleteTeacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindProductServlet</servlet-name>
        <url-pattern>/findProduct</url-pattern>
    </servlet-mapping>

    <!--设置默认启动页面-->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <!--设置Session空闲时间-->
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>

    <!--注册监听器接口-->
    <listener>
        <listener-class>com.jason.listener.MyServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.jason.listener.MyServletContextAttributeListener</listener-class>
    </listener>
</web-app>